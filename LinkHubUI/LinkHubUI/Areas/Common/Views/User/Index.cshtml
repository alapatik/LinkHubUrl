@model IEnumerable<BOL.tbl_User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>

<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.UserId)*@
            @Html.ActionLink("User ID", "Index", new { SortBy = "UserId"
           , SortOrder = ViewBag.SortOrder == "ASC" ? "DESC" : "ASC", PageNumber = ViewBag.CurrentPage})
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.UserEmail)*@
            @Html.ActionLink("User Email", "Index", new {SortBy = "UserEmail"
                ,SortOrder = ViewBag.SortOrder == "ASC" ? "DESC" : "ASC",
                PageNumber = ViewBag.CurrentPage})
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Role)*@
            @Html.ActionLink("Role", "Index", new {SortBy = "Role"
               ,SortOrder = ViewBag.SortOrder == "ASC" ? "DESC" : "ASC",
                PageNumber = ViewBag.CurrentPage})
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
        </tr>
    }
</table>
@for (int i = 0; i < ViewBag.PageCount; i++)
{
    if (i + 1 == ViewBag.CurrentPage)
    {
<u>
    @Html.ActionLink((i + 1).ToString() + " ", "Index", new
    {
        SortBy = ViewBag.SortBy,
        SortOrder = ViewBag.SortOrder,
        PageNumber = i + 1
    })
    </u>
    }
    else
    {
        @Html.ActionLink((i + 1).ToString() + " ", "Index", new
        {
            SortBy = ViewBag.SortBy,
            SortOrder = ViewBag.SortOrder,
            PageNumber = i + 1
        })

    }
}
