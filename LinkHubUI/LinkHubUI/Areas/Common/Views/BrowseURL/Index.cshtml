@model IEnumerable<BOL.tbl_Url>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>URLs</h2>

<table class="table">
    <tr>
        <th>
            @*@Html.ActionLink("Title", "Index", new { SortOrder = "ASC", SortBy = "Title" })*@
            @Html.ActionLink("Title", "Index", "BrowseURL"
                          , new { SortOrder = ViewBag.SortOrder == "ASC" ? "DESC" : "ASC", SortBy = "Title", PageNumber = ViewBag.PageNumber }, null)
            @*@Html.DisplayNameFor(model => model.UrlTitle)*@
        </th>
        <th>
            @* @Html.DisplayNameFor(model => model.Url)*@
            @Html.ActionLink("URL", "Index", "BrowseURL"
                          , new { SortOrder = ViewBag.SortOrder == "ASC" ? "DESC" : "ASC", SortBy = "Url", PageNumber = ViewBag.PageNumber }, null)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.UrlDesc)*@
            @Html.ActionLink("URL Description", "Index", "BrowseURL"
                          , new { SortOrder = ViewBag.SortOrder == "ASC" ? "DESC" : "ASC", SortBy = "UrlDesc", PageNumber = ViewBag.PageNumber }, null)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.IsApproved)*@
            @Html.ActionLink("Is Approved", "Index", "BrowseURL"
                          , new { SortOrder = ViewBag.SortOrder == "ASC" ? "DESC" : "ASC", SortBy = "IsApproved", PageNumber = ViewBag.PageNumber }, null)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.tbl_Category.CategoryName)*@
            @Html.ActionLink("Category Name", "Index", "BrowseURL"
                          , new { SortOrder = ViewBag.SortOrder == "ASC" ? "DESC" : "ASC", SortBy = "CategoryName", PageNumber = ViewBag.PageNumber }, null)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.tbl_User.UserEmail)*@
            @Html.ActionLink("User Email", "Index", "BrowseURL"
                          , new { SortOrder = ViewBag.SortOrder == "ASC" ? "DESC" : "ASC", SortBy = "UserEmail", PageNumber = ViewBag.PageNumber }, null)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UrlTitle)
            </td>
            <td>
                @*@Html.ActionLink(item.Url, "")*@
                <a href="">@item.Url</a>
                @*@Html.DisplayFor(modelItem => item.Url)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsApproved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_User.UserEmail)
            </td>
        </tr>
    }

</table>
@for (int i = 0; i < ViewBag.PageCount; i++)
{
    if (i + 1 == ViewBag.PageNumber)
    {
<u>@Html.ActionLink((i + 1).ToString() + " ", "Index", new { SortOrder = ViewBag.SortOrder, SortBy = ViewBag.SortBy, PageNumber = (i + 1).ToString() })</u>

    }
    else
    {
        @Html.ActionLink((i + 1).ToString() + " ", "Index", new { SortOrder = ViewBag.SortOrder, SortBy = ViewBag.SortBy, PageNumber = (i + 1).ToString() })
    }
}
